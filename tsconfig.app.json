{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",

    /* Important: let TS import manifest.json, and recognize Chrome/Node types */
    "resolveJsonModule": true,
    "types": ["vite/client", "chrome", "node"],

    "skipLibCheck": true,

    /* Bundler mode (keep original settings) */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting (keep original settings) */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },

  /* Important: include these files in type checking (for editor recognition) */
  "include": ["src", "manifest.json", "index.html", "vite.config.ts"]
}
